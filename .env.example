# Configurazione nodo
NODE_ENV=production

# API
API_PORT=7001
API_HOST=0.0.0.0

# P2P
P2P_PORT=6001
IS_BOOTSTRAP=true

# Directory dati
DATA_DIR=/opt/drakon-node

# Mining
MINING_ENABLED=false
MINING_DIFFICULTY=4
MINING_THREADS=1

# Bootstrap nodes (array JSON di oggetti con host e port)
# Example: [{"host":"123.456.789.10","port":6001},{"host":"123.456.789.11","port":6001}]
BOOTSTRAP_NODES=[]

# Logging
LOG_LEVEL=info
LOG_FILE=/var/log/drakon-node.log

# Configurazione avanzata
MEMPOOL_MAX_SIZE=1000
GOSSIP_INTERVAL=5000
DHT_ENABLED=true
DHT_INTERVAL=30000

# Network
MAX_PEERS=50
CHANNEL=drakon-mainnet

# Sicurezza
API_RATE_LIMIT=100
API_RATE_WINDOW=15m

# Wallet
WALLET_PATH=data/wallet.json
WALLET_PASSWORD=

# API Security
API_KEY=
API_SECRET=

# Monitoring
ENABLE_METRICS=true
METRICS_PORT=9100 